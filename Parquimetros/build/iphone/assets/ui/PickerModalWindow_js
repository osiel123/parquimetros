function PickerModalWindow(e){return windowPicker=Ti.UI.createWindow({backgroundColor:"transparent",modal:!0,width:Ti.UI.FILL,height:Ti.UI.FILL}),viewBackgroundPicker=Ti.UI.createView({height:"100%",width:"100%",opacity:.3,backgroundColor:"black",touchEnabled:!0,bubbleParent:!1}),viewContainerPicker=Ti.UI.createView({backgroundColor:Ti.App.backgroundColor,layout:"vertical",center:{x:"50%",y:"50%"},width:"90%",height:Ti.UI.SIZE,borderRadius:4,touchEnabled:!0,bubbleParent:!1}),labelPickerModalTitle=Titanium.UI.createLabel({text:e.title,top:"1dp",width:"90%",height:Ti.UI.SIZE,color:Ti.App.labelColor,font:{fontSize:Ti.App.fontSize},touchEnabled:!0,bubbleParent:!1}),buttonAcceptPicker=Ti.UI.createButton({title:L("ok"),width:"90%",height:"45dp",bottom:"10dp",top:"40dp",borderRadius:4,backgroundColor:Ti.App.buttonColor2,color:Ti.App.buttonTextColor}),viewContainerPicker.add(labelPickerModalTitle),viewContainerPicker.add(e.picker),viewContainerPicker.add(buttonAcceptPicker),windowPicker.add(viewBackgroundPicker),windowPicker.add(viewContainerPicker),buttonAcceptPicker.addEventListener("click",function(t){var i=new Date;i-t.source.clickTime<1e3||(t.source.clickTime=i,-1!=e.picker.getSelectedRow(0).value?(e.textField.selectedId=e.picker.getSelectedRow(0).value,e.textField.value=e.picker.getSelectedRow(0).title,windowPicker.close()):showMessage(L("please_select")))}),buttonAcceptPicker.addEventListener("touchstart",function(e){e.source.backgroundColor=Ti.App.buttonPressedColor2}),buttonAcceptPicker.addEventListener("touchend",function(e){e.source.backgroundColor=Ti.App.buttonColor2}),buttonAcceptPicker.addEventListener("touchcancel",function(e){e.source.backgroundColor=Ti.App.buttonColor2}),windowPicker.addEventListener("android:back",function(e){}),windowPicker.addEventListener("open",function(){if("android"==Ti.Platform.name){var e=windowPicker.activity.actionBar;e.hide()}}),windowPicker}module.exports=PickerModalWindow;