function createNavigationTabGroup(e){function t(){var e=Ti.UI.createView({backgroundColor:theme.backgroundColor,width:theme.dividerWidth}),t=Ti.UI.createView({height:theme.dividerHeight,backgroundColor:theme.dividerColor});return e.add(t),e}function o(e){var t,i,o,d=e||{},r={id:d.id||(new Date).getTime()+"",text:d.text||"Tab",image:d.image,selectedImage:d.selectedImage,selectedColor:d.selectedColor||theme.selectedColor,backgroundColor:d.backgroundColor||theme.backgroundColor,textColor:d.textColor||theme.textColor,width:d.width||"auto",selected:d.selected||!1};return r.selected&&(a=r.id),t=Ti.UI.createView({id:r.id,text:r.text,image:r.image,selectedImage:r.selectedImage,backgroundColor:r.selectedColor,width:r.width,layout:"vertical"}),i=Ti.UI.createView({backgroundColor:r.backgroundColor,height:r.selected?theme.selectedButtonHeight:theme.buttonHeight,width:Ti.UI.FILL}),o=Ti.UI.createImageView({image:r.selected?r.selectedImage:r.image,height:theme.imageHeight,width:theme.imageWidth}),i.add(o),t.add(i),t.addEventListener("click",function(){s.fireEvent(events.TAB_CLICK,{tabId:t.id,tabText:t.text})}),{tabView:t,select:function(e){o.image=e?r.selectedImage:r.image,i.height=e?theme.selectedButtonHeight:theme.buttonHeight}}}for(var a,d=e||[],r=d.length,n=98.8/d.length,l=0,s=(Ti.Platform.displayCaps.platformWidth,Ti.UI.createView({layout:"horizontal",width:Ti.UI.FILL,top:1,bottom:1}));r>l;l++)d[l].width=Math.round(n)+"%",d[l]=o(d[l]),s.add(d[l].tabView),s.add(t());return s.addEventListener(events.TAB_CLICK,function(e){for(var t,i=0,o=d.length;o>i;i++)t=d[i],t.tabView.id==a&&t.select(!1),t.tabView.id==e.tabId&&(t.select(!0),labelAppTitle.text=e.tabText);a=e.tabId,Ti.App.Properties.fireEvent("startScrolling",{id:a})}),Ti.App.Properties.addEventListener("selectedTab",function(e){for(i=0;i<d.length;i++)d[i].tabView.id==e.id?(labelAppTitle.text=d[i].tabView.text,d[i].select(!0)):d[i].select(!1)}),s}function ActionBarView(e){var t=Ti.UI.createView({height:theme.height,backgroundCo